    salario = input("Insira um salario : ")
    if salario < 0:
        print("salario invalido")
    else : 
        valid_salario = True 


valid_estado_civil = False 
while(valid_estado_civil==False):
    estado_civil = input("Insira um estado civil : ")
    if estado_civil != "s" or estado_civil != "c" or estado_civil != "v" or estado_civil != "v":
        print("estado civil invalido ")
    else : 
        valid_salario = True 
