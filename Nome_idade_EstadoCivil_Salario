# Faça um programa que leia e valide as seguintes informações:

# Nome: maior que 3 caracteres;
# Idade: entre 0 e 150;
# Salário: maior que zero;
# Estado Civil: 's', 'c', 'v', 'd
print("""digite um : 
      *nome maior que 3 caracteres 
      * uma idade entre 0 e 150
      * um salário  maior que 0 
      * um estado civil ; "s" , "c" , "v" ou "d" 
      """)

valid_nome  = False
while (valid_nome == False):
    nome = input("Insira um nome : ")
    if len(nome) < 3:
        print("nome invalido")
    else : 
        valid_nome = True 

valid_idade = False 
while (valid_idade==False):
    idade = input("Insira uma idade : ")
    idade = int(idade)
    if 0 > idade  > 150:
        print("idade invalida ")
    else : 
        valid_idade = True 

